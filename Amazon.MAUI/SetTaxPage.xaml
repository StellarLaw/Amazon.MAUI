<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Amazon.MAUI.SetTaxPage"
             Title="SetTaxPage">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="10">
            <Label Text="Set Tax Rate" 
                   FontSize="Large" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   Margin="0,20,0,10"/>
            <Entry x:Name="TaxRateEntry" 
                   Placeholder="Enter Tax Rate" 
                   Keyboard="Numeric" 
                   FontSize="Medium"
                   Margin="0,0,0,10"/>
            <Button Text="Save" 
                    Clicked="OnSaveClicked" 
                    BackgroundColor="LightSkyBlue" 
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HorizontalOptions="Center"
                    Padding="10,5"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>