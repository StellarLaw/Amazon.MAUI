<?xml version="1.0" encoding="utf-8" ?>

<!-- MainPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Amazon.MAUI.MainPage">
    <StackLayout Padding="20" Spacing="10">
        <Label Text="Amazon MAUI" 
               FontSize="Large" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               Margin="0,20,0,10"/>

        <Button Text="Go to Inventory" 
                Clicked="OnInventoryClicked" 
                BackgroundColor="LightGreen" 
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                HorizontalOptions="Center"
                Padding="10,5"/>

        <Button Text="Go to Shop" 
                Clicked="OnShopClicked" 
                BackgroundColor="LightBlue" 
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                HorizontalOptions="Center"
                Padding="10,5"/>

        <Button Text="Set Tax Rate" 
                Clicked="OnSetTaxRateClicked" 
                BackgroundColor="LightSkyBlue" 
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                HorizontalOptions="Center"
                Padding="10,5"/>
    </StackLayout>
</ContentPage>

    
